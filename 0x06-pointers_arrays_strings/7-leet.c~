#include "holberton.h"
/**
 * leet - check the code for Holberton School students.
 *@s: declaration
 * Return: Always 0.
 */
char *leet(char *s)
{
int x, y;

int datos[] = {65, 97, 69, 101, 79, 111, 84, 116, 76, 108};
int rempl[] = {4, 4, 3, 3, 0, 0, 7, 7, 1, 1};

	for (x = 0 ; s[x] != '\0' ; x++)
	{
		for (y = 0; y <= 10 ; y++)
		{
			if(s[x] == datos[y])
			{
				s[x] = rempl[y];
			}
		}
	}
	return (s);
}
